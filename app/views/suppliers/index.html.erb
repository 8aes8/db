<h1>Listing suppliers</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Contact name</th>
      <th>Contact title</th>
      <th>Adress</th>
      <th>City</th>
      <th>Region</th>
      <th>Postal colde</th>
      <th>Country</th>
      <th>Phone</th>
      <th>Fax</th>
      <th>Home page</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.company_name %></td>
        <td><%= supplier.contact_name %></td>
        <td><%= supplier.contact_title %></td>
        <td><%= supplier.adress %></td>
        <td><%= supplier.city %></td>
        <td><%= supplier.region %></td>
        <td><%= supplier.postal_colde %></td>
        <td><%= supplier.country %></td>
        <td><%= supplier.phone %></td>
        <td><%= supplier.fax %></td>
        <td><%= supplier.home_page %></td>
        <td><%= link_to 'Show', supplier %></td>
        <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
        <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

